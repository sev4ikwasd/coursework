<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/17"
      fx:controller="ru.miit.coursework.login.logic.LoginController">
    <AnchorPane VBox.vgrow="ALWAYS">
        <Label alignment="CENTER" contentDisplay="CENTER" AnchorPane.leftAnchor="290.0" layoutY="88.0" text="Login"
               AnchorPane.rightAnchor="290.0">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <GridPane alignment="CENTER" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0"
                  AnchorPane.topAnchor="200.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <TextField alignment="CENTER" GridPane.columnIndex="1" fx:id="loginField"/>
            <PasswordField alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="passwordField"/>
            <Label alignment="CENTER" text="Login: "/>
            <Label alignment="CENTER" text="Password: " GridPane.rowIndex="1"/>
        </GridPane>
        <Button layoutX="408.0" layoutY="301.0" mnemonicParsing="false" text="Login"
                AnchorPane.rightAnchor="180.0" fx:id="loginButton" onAction="#loginButtonAction"/>
        <Button layoutX="172.0" layoutY="301.0" mnemonicParsing="false" text="Register"
                AnchorPane.leftAnchor="180.0" fx:id="registerButton" onAction="#registerButtonAction"/>
    </AnchorPane>
</VBox>

