<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.spreadsheet.SpreadsheetView?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="ru.miit.coursework.MainController">
    <ToolBar>
        <GridPane>
            <Label GridPane.rowIndex="0" GridPane.columnIndex="0" text="Text color:"/>
            <ColorPicker GridPane.rowIndex="1" GridPane.columnIndex="0" onAction="#textColorPickerAction" fx:id="textColorPicker"/>
            <Label GridPane.rowIndex="0" GridPane.columnIndex="1" text="Background color:"/>
            <ColorPicker GridPane.rowIndex="1" GridPane.columnIndex="1" onAction="#backgroundColorPickerAction" fx:id="backgroundColorPicker"/>
        </GridPane>
    </ToolBar>
    <SpreadsheetView fx:id="spreadsheet" />
</VBox>
